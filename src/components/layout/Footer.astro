---
import ShipLogo from '../icons/ShipLogo.astro';
import Container from '../ui/Container.astro';
---

<footer class="bg-dark-900 border-t border-ocean-500/10 py-12 md:py-16">
  <Container>
    <div class="flex flex-col md:flex-row items-center justify-between gap-8">
      <!-- Logo & Copyright -->
      <div class="flex flex-col items-center md:items-start gap-4">
        <a href="/" class="flex items-center gap-3">
          <ShipLogo size="sm" animated={false} class="text-ocean-400" />
          <span class="font-display font-semibold text-xl text-ocean-50">CoShip</span>
        </a>
        <p class="text-ocean-400 text-sm">
          &copy; {new Date().getFullYear()} CoShip. All rights reserved.
        </p>
      </div>

      <!-- Links -->
      <div class="flex flex-wrap justify-center gap-8 text-sm">
        <a href="#process" class="text-ocean-300 hover:text-ocean-50 transition-colors">The Process</a>
        <a href="#compare" class="text-ocean-300 hover:text-ocean-50 transition-colors">Compare</a>
        <a href="#faq" class="text-ocean-300 hover:text-ocean-50 transition-colors">FAQ</a>
        <a href="#pricing" class="text-ocean-300 hover:text-ocean-50 transition-colors">Purchase</a>
      </div>

      <!-- Social / Contact -->
      <div class="flex items-center gap-4">
        <a
          href="https://twitter.com"
          target="_blank"
          rel="noopener noreferrer"
          class="p-2 text-ocean-400 hover:text-ocean-300 transition-colors"
          aria-label="Twitter"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
          </svg>
        </a>
        <a
          href="mailto:hello@coship.dev"
          class="p-2 text-ocean-400 hover:text-ocean-300 transition-colors"
          aria-label="Email"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
          </svg>
        </a>
      </div>
    </div>
  </Container>
</footer>
