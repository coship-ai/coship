---
interface Props {
  variant?: 'primary' | 'secondary' | 'ghost';
  size?: 'sm' | 'md' | 'lg';
  href?: string;
  class?: string;
  type?: 'button' | 'submit';
}

const {
  variant = 'primary',
  size = 'md',
  href,
  class: className = '',
  type = 'button'
} = Astro.props;

const baseClasses = 'inline-flex items-center justify-center font-medium transition-all duration-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-ocean-500 focus:ring-offset-2 focus:ring-offset-dark-950';

const variantClasses = {
  primary: 'bg-gradient-to-r from-ocean-500 to-ocean-600 text-white hover:from-ocean-400 hover:to-ocean-500 shadow-lg shadow-ocean-500/25 hover:shadow-ocean-400/40',
  secondary: 'bg-dark-800 text-ocean-100 border border-ocean-500/30 hover:bg-dark-700 hover:border-ocean-500/50',
  ghost: 'text-ocean-300 hover:text-ocean-100 hover:bg-dark-800/50'
};

const sizeClasses = {
  sm: 'px-4 py-2 text-sm',
  md: 'px-6 py-3 text-base',
  lg: 'px-8 py-4 text-lg'
};

const classes = [baseClasses, variantClasses[variant], sizeClasses[size], className].join(' ');

const Tag = href ? 'a' : 'button';
---

{href ? (
  <a href={href} class={classes}>
    <slot />
  </a>
) : (
  <button type={type} class={classes}>
    <slot />
  </button>
)}

<style>
  a, button {
    position: relative;
    overflow: hidden;
  }

  a::before, button::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      90deg,
      transparent,
      rgba(255, 255, 255, 0.1),
      transparent
    );
    transition: left 0.5s;
  }

  a:hover::before, button:hover::before {
    left: 100%;
  }
</style>
