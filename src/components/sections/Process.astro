// Accent colors for the top strip of each card
const cardAccents = [
  'bg-ocean-500',
  'bg-ocean-400',
  'bg-accent',
  'bg-ocean-600',
  'bg-ocean-700',
  'bg-accent-bright',
];
---

<section id="process" class="bg-dark-950">
  <Container>
    <!-- Section header -->
    <div class="text-center max-w-3xl mx-auto pt-24 md:pt-32 pb-12">
      <h2 class="font-display font-bold text-3xl sm:text-4xl md:text-5xl text-ocean-50 mb-6">
        Ship's Process
      </h2>
      <p class="text-lg text-ocean-300">
        A co-founder that understands your vision and helps you execute. From idea to shipped product with clarity at every step.
      </p>
    </div>
  </Container>

  <!-- Scroll-driven stacked cards -->
  <div class="stacked-scroll-container">
    {steps.map((step, index) => (
      <div
        class="stacked-card-wrapper"
        data-index={index}
        style={`--card-index: ${index}; --total-cards: ${steps.length};`}
      >
        <div class="stacked-card">
          <!-- Colored accent strip at top -->
          <div class={`card-accent-strip ${cardAccents[index]}`}></div>

          <!-- Card body -->
          <div class="card-body">
            <div class="card-content">
              <!-- Text content -->
              <div class="card-text">
                <div class="step-indicator">
                  <span class="step-number">{step.number}</span>
                  <span class="step-divider"></span>
                  <span class="step-label">Step {index + 1} of {steps.length}</span>
                </div>
                <h3 class="font-display font-bold text-2xl md:text-3xl text-ocean-50 mb-2">
                  {step.title}
                </h3>
                <p class="text-ocean-400 italic mb-4 text-sm md:text-base">
                  "{step.problem}"
                </p>
                <p class="text-ocean-200 leading-relaxed text-base md:text-lg">
                  {step.description}
                </p>
              </div>
              <!-- Icon visual -->
              <div class="card-visual">
                <div class="icon-container">
                  <Fragment set:html={step.icon} />
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    ))}
    <!-- Spacer to allow last card to be scrolled and viewed fully -->
    <div class="card-spacer"></div>
  </div>
</section>

<style>
  .stacked-scroll-container {
    position: relative;
    padding: 0 1rem;
    max-width: 56rem;
    margin: 0 auto;
  }

  @media (min-width: 768px) {
    .stacked-scroll-container {
      padding: 0 2rem;
    }
  }

  .stacked-card-wrapper {
    position: sticky;
    /* Each card sticks slightly lower, revealing the top of previous cards */
    top: calc(5rem + var(--card-index) * 1.5rem);
    /* Margin creates scroll distance - each card scrolls into view individually */
    margin-bottom: 25vh;
    /* Higher index cards stack ON TOP of lower index cards */
    z-index: calc(var(--card-index) + 1);
  }

  @media (min-width: 768px) {
    .stacked-card-wrapper {
      top: calc(6rem + var(--card-index) * 2rem);
      margin-bottom: 30vh;
    }
  }

  /* Last card doesn't need the large margin */
  .stacked-card-wrapper:last-of-type {
    margin-bottom: 0;
  }

  /* Spacer at end to allow viewing the last card */
  .card-spacer {
    height: 4rem;
  }

  .stacked-card {
    width: 100%;
    border-radius: 1.25rem;
    overflow: hidden;
    box-shadow:
      0 25px 50px -12px rgba(0, 0, 0, 0.5),
      0 0 0 1px rgba(14, 165, 233, 0.1);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .stacked-card:hover {
    box-shadow:
      0 30px 60px -12px rgba(0, 0, 0, 0.6),
      0 0 0 1px rgba(14, 165, 233, 0.2);
  }

  /* Colored accent strip at the top of each card */
  .card-accent-strip {
    height: 6px;
    width: 100%;
  }

  /* Card body with dark theme matching pricing */
  .card-body {
    background: linear-gradient(180deg, var(--color-dark-800) 0%, var(--color-dark-900) 100%);
    border: 1px solid rgba(14, 165, 233, 0.15);
    border-top: none;
    border-radius: 0 0 1.25rem 1.25rem;
  }

  .card-content {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    padding: 1.5rem;
  }

  @media (min-width: 768px) {
    .card-content {
      flex-direction: row;
      align-items: center;
      gap: 2.5rem;
      padding: 2rem 2.5rem;
    }
  }

  .card-text {
    flex: 1;
  }

  .step-indicator {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 1rem;
  }

  .step-number {
    font-family: var(--font-family-display);
    font-weight: 700;
    font-size: 0.875rem;
    color: var(--color-ocean-400);
  }

  .step-divider {
    width: 1px;
    height: 1rem;
    background: var(--color-dark-600);
  }

  .step-label {
    font-size: 0.75rem;
    color: var(--color-ocean-600);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .card-visual {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  @media (min-width: 768px) {
    .card-visual {
      flex: 0 0 140px;
    }
  }

  .icon-container {
    width: 100px;
    height: 100px;
    background: linear-gradient(135deg, var(--color-dark-700) 0%, var(--color-dark-800) 100%);
    border: 1px solid rgba(14, 165, 233, 0.2);
    border-radius: 1rem;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--color-ocean-400);
  }

  @media (min-width: 768px) {
    .icon-container {
      width: 120px;
      height: 120px;
      border-radius: 1.25rem;
    }
  }

  .icon-container :global(svg) {
    width: 40px;
    height: 40px;
  }

  @media (min-width: 768px) {
    .icon-container :global(svg) {
      width: 48px;
      height: 48px;
    }
  }
</style>

<script>
  // Stacked scroll effect - CSS handles positioning, JS adds subtle polish
  const cards = document.querySelectorAll('.stacked-card-wrapper') as NodeListOf<HTMLElement>;

  function updateCards() {
    cards.forEach((wrapper) => {
      const rect = wrapper.getBoundingClientRect();
      const card = wrapper.querySelector('.stacked-card') as HTMLElement;
      if (!card) return;

      const stickyTop = parseFloat(getComputedStyle(wrapper).top);
      const distanceFromSticky = rect.top - stickyTop;

      // Subtle scale effect when card is covered by newer cards
      if (distanceFromSticky <= -20) {
        const scale = Math.max(0.97, 1 + (distanceFromSticky / 3000));
        card.style.transform = `scale(${scale})`;
      } else {
        card.style.transform = 'scale(1)';
      }
    });
  }

  window.addEventListener('scroll', updateCards, { passive: true });
  updateCards();
</script>
