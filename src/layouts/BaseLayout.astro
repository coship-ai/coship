---
import '../styles/global.css';

interface Props {
  title?: string;
  description?: string;
}

const {
  title = 'CoShip - Your Agentic CTO',
  description = 'Build your startup MVP without a technical co-founder. CoShip is your Agentic CTOâ€”guiding you through Claude to transform your idea into a working product.'
} = Astro.props;

const siteUrl = 'https://coship.dev';
const ogImage = `${siteUrl}/og-image.svg`;

// JSON-LD structured data
const structuredData = {
  "@context": "https://schema.org",
  "@type": "SoftwareApplication",
  "name": "CoShip",
  "description": "Agentic CTO for non-technical founders",
  "applicationCategory": "DeveloperApplication",
  "operatingSystem": "macOS",
  "offers": [
    {
      "@type": "Offer",
      "name": "Lifetime License",
      "price": "899",
      "priceCurrency": "USD"
    },
    {
      "@type": "Offer",
      "name": "Pro Monthly",
      "price": "125",
      "priceCurrency": "USD"
    },
    {
      "@type": "Offer",
      "name": "Pro Yearly",
      "price": "1249",
      "priceCurrency": "USD"
    }
  ]
};
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="robots" content="index, follow" />
    <meta name="theme-color" content="#0c4a6e" />
    <meta name="author" content="CoShip" />

    <!-- Canonical URL -->
    <link rel="canonical" href={siteUrl} />

    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={siteUrl} />
    <meta property="og:site_name" content="CoShip" />
    <meta property="og:image" content={ogImage} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:image:type" content="image/svg+xml" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImage} />
    <meta name="twitter:site" content="@coship_ai" />
    <meta name="twitter:creator" content="@coship_ai" />

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <!-- JSON-LD Structured Data -->
    <script type="application/ld+json" set:html={JSON.stringify(structuredData)} />

    <title>{title}</title>
  </head>
  <body class="antialiased">
    <slot />
  </body>
</html>
