---
interface Props {
  variant?: 'default' | 'elevated' | 'glow';
  class?: string;
  hover?: boolean;
}

const {
  variant = 'default',
  class: className = '',
  hover = true
} = Astro.props;

const baseClasses = 'rounded-2xl p-6 transition-all duration-300';

const variantClasses = {
  default: 'bg-dark-900 border border-ocean-500/10',
  elevated: 'bg-dark-800 border border-ocean-500/20 shadow-xl shadow-dark-950/50',
  glow: 'bg-dark-800 border border-ocean-500/30 shadow-lg shadow-ocean-500/10'
};

const hoverClasses = hover ? 'hover:border-ocean-500/30 hover:shadow-lg hover:shadow-ocean-500/5 hover:-translate-y-1' : '';

const classes = [baseClasses, variantClasses[variant], hoverClasses, className].join(' ');
---

<div class={classes}>
  <slot />
</div>
